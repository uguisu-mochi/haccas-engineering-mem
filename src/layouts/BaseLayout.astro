---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// titleに加えて、各ページからdescription（説明文）も受け取れるようにします
interface Props {
  title: string;
  description?: string; 
}

// descriptionが渡されなかった場合のデフォルトの文章を設定
const { 
  title, 
  description = "エンジニアが書く、コーディングメモ、ガジェットレビューの掲載サイトです。" 
} = Astro.props;
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    
    <meta name="description" content={description} />
    <meta property="og:title" content={`${title} | Hacca's engineering memo`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Hacca's engineering memo" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    
    <title>{title} | Hacca's engineering memo</title>
  </head>
  <body>
    <Header />
    
    <main class="container">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  /* is:global をつけると、サイト全体に効くCSSになります */
  
  /* --- カラーパレットの定義 --- */
  :root {
    --color-main: #004898;      /* 瑠璃色 */
    --color-base: #F8FAFC;      /* オフホワイト */
    --color-text-main: #1A202C; /* ダークスレート */
    --color-text-sub: #718096;  /* クールグレー */
    --color-link: #004898;      /* 瑠璃色 */
    --color-accent: #D97706;    /* 琥珀色 */
  }

  /* --- ブラウザのデフォルト設定をリセット --- */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* --- 全体の基本スタイル --- */
  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--color-base);
    color: var(--color-text-main);
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    min-height: 100vh; /* 画面の高さの最低値。フッターを下に固定するため */
  }

  /* --- ボディレイアウト：幅80%・最大1000px --- */
  .container {
    width: 80%;
    max-width: 1000px;
    margin: 2rem auto; /* 上下に余白を取りつつ、左右中央寄せ */
    flex: 1; /* メインコンテンツが余白を埋めるようにする */
  }

  /* --- リンクの基本スタイル（色覚特性に配慮） --- */
  a {
    color: var(--color-link);
    text-decoration: underline;
  }
  
  a:hover {
    opacity: 0.8;
  }
</style>
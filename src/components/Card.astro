---
// 親コンポーネント（トップページなど）から受け取るデータの型を定義します
interface Props {
  href: string;      // 記事のURL
  title: string;     // 記事のタイトル
  eyecatch: string;  // アイキャッチ画像のURL
}

const { href, title, eyecatch } = Astro.props;
---

<a href={href} class="card">
  <div class="card-img-wrapper">
    <img src={eyecatch} alt={title} class="card-img" />
  </div>
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
  </div>
</a>

<style>
  /* --- カード全体のスタイル --- */
  .card {
    display: flex;
    flex-direction: column;
    height: 250px; /* 要件通り、高さを約250pxに固定 */
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden; /* 角丸からはみ出た画像を隠す */
    text-decoration: none; /* リンクの下線を消す */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05); /* 軽い影をつける */
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  /* ホバー（マウスオーバー）時のフワッと浮くアニメーション */
  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1);
  }

  /* --- 画像部分のスタイル --- */
  .card-img-wrapper {
    height: 150px; /* 画像の高さを指定 */
    overflow: hidden;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* 画像の縦横比を保ちつつ、枠いっぱいに埋める */
  }

  /* --- テキスト部分のスタイル --- */
  .card-content {
    padding: 1rem;
    flex-grow: 1; /* 余ったスペースを埋める */
  }

  .card-title {
    font-size: 1rem;
    color: var(--color-text-main);
    margin: 0;
    /* 複数行になったら末尾を「...」にする記述 */
    display: -webkit-box;
    -webkit-line-clamp: 2; /* 2行まで表示 */
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
---
interface Props {
  title: string;       // 商品名
  imageUrl: string;    // 商品画像のURL
  amazonUrl: string;   // Amazonのアフィリエイトリンク
}

const { title, imageUrl, amazonUrl } = Astro.props;
---

<div class="affiliate-box">
  <div class="image-area">
    <img src={imageUrl} alt={title} loading="lazy" />
  </div>
  <div class="info-area">
    <h3 class="product-title">{title}</h3>
    <a href={amazonUrl} target="_blank" rel="noopener noreferrer" class="amazon-button">
      Amazonで見る
    </a>
  </div>
</div>

<style>
  .affiliate-box {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.5rem;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    background-color: #ffffff;
    margin: 2rem 0; /* 記事の中での上下の余白 */
  }

  /* 画面幅が広いときは横並びにする（レスポンシブ対応） */
  @media (min-width: 600px) {
    .affiliate-box {
      flex-direction: row;
      align-items: center;
    }
  }

  .image-area {
    flex-shrink: 0;
    width: 150px;
    height: 150px;
    margin: 0 auto;
  }

  .image-area img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* 画像全体が収まるようにする */
  }

  .info-area {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .product-title {
    font-size: 1.2rem;
    color: var(--color-text-main);
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .amazon-button {
    display: inline-block;
    background-color: var(--color-accent); /* 要件の琥珀色を使用 */
    color: #ffffff;
    text-align: center;
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    font-weight: bold;
    text-decoration: none;
    transition: opacity 0.2s;
    align-self: flex-start; /* ボタンの幅をテキストに合わせる */
  }

  .amazon-button:hover {
    opacity: 0.8;
  }
</style>